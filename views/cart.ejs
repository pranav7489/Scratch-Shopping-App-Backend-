 <%- include('./partials/header') %>

<!-- Main wrapper -->
<div class="px-20 py-20">

  <!-- ▸ Product cards -->
  <% user.cart.forEach(function (item) { %>
  <div class="w-full flex items-start gap-10 mb-16">
    <!-- Product‑side (30 %) -->
    <div class="w-[30%] rounded-md overflow-hidden">
      <!-- Image block -->
      <div class="w-full flex justify-center items-center h-80 bg-[<%= item.bgcolor %>]">
        <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
      </div>

      <!-- Title + quantity picker -->
      <div class="w-full flex justify-between px-5 py-4">
        <h3 class="text-2xl">Clinge Bag</h3>
        <div class="flex items-center gap-2 bg-[<%= item.panelcolor %>]">
          <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
          <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
          <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
        </div>
      </div>

      <!-- Sub‑total -->
      <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">₹ <%= item.subtotal %></h2>
      </div>
    </div>

    <!-- Price breakdown (70 %) -->
    <div class="w-[70%]">
      <h3 class="text-xl">Price Breakdown</h3>
      <div class="px-10 mt-5">
        <div class="flex mt-2">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>₹ <%= item.price %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>₹ <%= Number(item.discount) %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>₹ 20</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div>
      </div>
    </div>
  </div>
  <% }); %>

  <!-- ▸ Grand total (outside loop) -->
  <div class="flex justify-end mt-10">
    <div class="w-[70%]">
      <div class="w-full h-[1px] bg-black mb-4"></div>
      <div class="flex justify-between items-center">
        <h3 class="text-2xl font-semibold">Grand Total</h3>
        <h3 class="text-2xl font-semibold text-green-600">₹ <%= bill %></h3>
      </div>
    </div>
  </div>

</div>

<%- include('./partials/footer') %>
